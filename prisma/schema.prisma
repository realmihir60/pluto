generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  hasConsented  Boolean         @default(false)
  isAdmin       Boolean         @default(false)
  accounts      Account[]
  medicalFacts  MedicalFact[]
  profile       PatientProfile?
  sessions      Session[]
  triageEvents  TriageEvent[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PatientProfile {
  id        String    @id @default(cuid())
  userId    String    @unique
  dob       DateTime?
  sex       String?
  heightCm  Int?
  weightKg  Int?
  bloodType String?
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MedicalFact {
  id         String   @id @default(cuid())
  userId     String
  type       String
  value      String
  meta       Json?
  confidence String   @default("Reported")
  source     String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TriageEvent {
  id                String           @id @default(cuid())
  userId            String
  symptoms          String
  aiResult          Json
  actionRecommended String
  urgency           String
  createdAt         DateTime         @default(now())
  engineVersion     String           @default("2.1.0")
  logicSnapshot     Json             @default("{}")
  user              User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  feedback          TriageFeedback[]
}

model TriageFeedback {
  id             String      @id @default(cuid())
  triageEventId  String
  userId         String
  rating         String
  comment        String?
  createdAt      DateTime    @default(now())
  triageEvent    TriageEvent @relation(fields: [triageEventId], references: [id], onDelete: Cascade)
}
